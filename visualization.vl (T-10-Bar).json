{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "Top 10 Countries by Happiness Score.",
  "data": {"url": "https://dl.dropbox.com/s/wldjq4i1ant99nh/2018.top20.csv"},
  "width": 750,
  "height": 200,
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Country or region",
      "type": "nominal",
      "axis": {"labelAngle": 0}
    },
    "y": {"field": "Score", "type": "quantitative"},
    "color": {
      "field": "Score",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [7.4, 7.5, 7.6, 7.7],
        "range": ["#16345F", "#224F8E", "#2E6DC4", "#3A8DFF"]
      }
    }
  },
  "config": {}
}