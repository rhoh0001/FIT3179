{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 300,
  "title": "How Health is affected relation to GDP and Generosity of the Top and Bottom 10 Countries in 2018",
  "data": {"url": "https://dl.dropbox.com/s/4ua0zmwvp4fdr9m/2018.top10bottom10.csv"},
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "GDP per capita",
      "type": "quantitative",
      "title": "GDP per capita",
      "axis": {"tickCount": 7},
      "scale": {"type": "linear", "domain": [0, 1.5]}
    },
    "y": {
      "field": "Generosity",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "scale": {"type": "linear", "domain": [0, 0.4]}
    },
    "color": {"field": "Healthy life expectancy", "type": "quantitative"},
    "size": {
      "field": "Score",
      "type": "quantitative",
      "title": "Happiness Score",
      "scale": {
        "type": "threshold",
        "domain": [ 3, 5, 7],
        "range": [150,300,500,800]
      },
      "legend": {"format": ".1s"}
    },
    "tooltip": [
      {"field": "Country or region", "type": "nominal"},
      {"field": "GDP per capita", "type": "quantitative", "format": ","},
      {
        "field": "Healthy life expectancy",
        "type": "quantitative",
        "format": ","
      },
      {"field": "Generosity", "type": "quantitative", "format": ","},
      {
        "field": "Freedom to make life choices",
        "type": "quantitative",
        "format": ","
      },
      {"field": "Score", "type": "quantitative", "format": ".2f"}
    ]
  },
  "config": {}
}